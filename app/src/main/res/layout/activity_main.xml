<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        style="@style/MyText"
        android:text="Enter number of sides:"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/edit_Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_Layout" />

    <LinearLayout
        android:id="@+id/linear_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="36dp"

            >

            <RadioButton
                android:id="@+id/radio_four"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="4 sides"
                />

            <RadioButton
                android:id="@+id/radio_six"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="6 sides" />

            <RadioButton
                android:id="@+id/radio_eight"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="8 sides" />

            <RadioButton
                android:id="@+id/radio_ten"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="10 sides" />

            <RadioButton
                android:id="@+id/radio_twelve"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="12 sides" />

            <RadioButton
                android:id="@+id/radio_twenty"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="20 sides" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="216dp"
        android:textSize="40dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_id"
        app:layout_constraintTop_toBottomOf="@+id/edit_Text" />

    <Button
        android:id="@+id/button_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="216dp"
        style="@style/MyButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Text" />

    <EditText
        android:id="@+id/edit_Text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="18dp"
        android:focusable="auto"
        android:hint="Number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>