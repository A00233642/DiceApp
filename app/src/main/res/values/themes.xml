<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiceApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1c2129</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">25dp</item>
        <item name="backgroundTint">#1c2129</item>
        <item name="cornerRadius">1000dp</item>
        <item name="rippleColor">#bf7581</item>
        <item name="android:text">Roll Dice</item>

    </style>


    <style name="MyText" parent="Widget.MaterialComponents.TextView">


        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Enter number of sides:</item>
        <item name="android:textColor">#000000</item>


    </style>





</resources>